{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "incremental": true
  }
}